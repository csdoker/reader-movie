<template name="stars">
  <view class="stars-container">
    <view class="stars-wrapper">
      <block wx:for="{{stars}}" wx:for-item="star">
        <image wx:if="{{star === 1}}" src="/images/icon/star.png"></image>
        <image wx:if="{{star === 0}}" src="/images/icon/none-star.png"></image>
      </block>
    </view>
    <text class="star-score">{{average}}</text>
  </view>
</template>