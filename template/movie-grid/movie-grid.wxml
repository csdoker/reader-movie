<import src="../movie/movie.wxml" />

<template name="movie-grid">
  <scroll-view scroll-y="true" scroll-x="false" bindscrolltolower="onScrollLower" class="movie-grid-container">
    <block wx:for="{{movies}}" wx:for-item="movie">
      <view class="movie-wrapper">
        <template is="movie" data="{{...movie}}"></template>
      </view>
    </block>
  </scroll-view>
</template>